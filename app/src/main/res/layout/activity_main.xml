<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stech.sukprung.sanae.mystech.MainActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/bgstech"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout

        android:padding="@dimen/margins2"

        android:background="#86000000"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo Sriwat

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

            -->

        <!-- Text Sriwat
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/name_sriwattanas"
            android:textColor="@color/colorTt"
            android:textSize="@dimen/hh1"
            android:textStyle="bold" />
            -->

        <LinearLayout
            android:background="#86ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins1"
            android:layout_marginRight="@dimen/margins1"
            android:layout_marginTop="@dimen/margins2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_user2" />

            <EditText
                android:id="@+id/edtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/users" />
        </LinearLayout>

        <LinearLayout
            android:background="#86ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins1"
            android:layout_marginRight="@dimen/margins1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_key" />

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password" />
        </LinearLayout>

        <TextView
            android:clickable="true"
            android:id="@+id/txtRegis"
            android:layout_gravity="center_horizontal"
            android:text="New Register"
            android:textColor="@color/colorh2"
            android:textSize="@dimen/h2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:text="@string/login"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
